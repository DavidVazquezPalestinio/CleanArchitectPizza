<Router AppAssembly="@typeof(Main).Assembly">
    <Found Context="pRouteData">
        <RouteView RouteData="@pRouteData" DefaultLayout="@typeof(MainLayout)" />
        <FocusOnNavigate RouteData="@pRouteData" Selector="h1" />
    </Found>
    <NotFound>
        <LayoutView Layout="@typeof(MainLayout)">
            <p role="alert">Sorry, there's nothing at this address.</p>
        </LayoutView>
    </NotFound>
</Router>
